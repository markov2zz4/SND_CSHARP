        <Button Grid.Row="2" Grid.Column="4" ></Button>
        <Button Grid.Row="3" Grid.Column="4" ></Button>
        <Button Grid.Row="4" Grid.Column="4" ></Button>
        <Button Grid.Row="5" Grid.Column="4" ></Button>

        <Button Grid.Row="0" Grid.Column="5" ></Button>
        <Button Grid.Row="1" Grid.Column="5" ></Button>
        <Button Grid.Row="2" Grid.Column="5" ></Button>
        <Button Grid.Row="3" Grid.Column="5" ></Button>
        <Button Grid.Row="4" Grid.Column="5" ></Button>
        <Button Grid.Row="5" Grid.Column="5" ></Button>

        <Button Grid.Row="0" Grid.Column="6" ></Button>
        <Button Grid.Row="1" Grid.Column="6" ></Button>
        <Button Grid.Row="2" Grid.Column="6" ></Button>
        <Button Grid.Row="3" Grid.Column="6" ></Button>
        <Button Grid.Row="4" Grid.Column="6" ></Button>
        <Button Grid.Row="5" Grid.Column="6" ></Button>

    </Grid>
</Window>
